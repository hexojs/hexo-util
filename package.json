{
  "name": "hexo-util",
  "version": "3.3.0",
  "description": "Utilities for Hexo.",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./highlight_alias.json": "./highlight_alias.json",
    "./dist/highlight_alias.json": "./highlight_alias.json"
  },
  "scripts": {
    "build-cjs": "tsc -p tsconfig.cjs.json",
    "build-esm": "tsc -p tsconfig.esm.json",
    "build-hightlight": "node scripts/build_highlight_alias.mjs",
    "build": "npm run build-cjs && npm run build-esm && npm run build-hightlight",
    "clean": "npx --yes rimraf dist tmp && npm run build",
    "prepublishOnly": "npm install && npm run clean && npm run build",
    "lint": "eslint --config eslint.config.mjs lib test",
    "lint-fix": "npm run lint -- --fix",
    "pretest": "node scripts/pretest.mjs",
    "test": "mocha --loader=ts-node/esm",
    "test-cov": "c8 --reporter=lcovonly npm run test",
    "postinstall": "npm run build-hightlight"
  },
  "files": [
    "dist/**",
    "scripts/",
    "highlight_alias.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexojs/hexo-util.git"
  },
  "homepage": "https://hexo.io/",
  "keywords": [
    "hexo",
    "util",
    "utilities"
  ],
  "author": "Tommy Chen <tommy351@gmail.com> (https://zespia.tw)",
  "maintainers": [
    "Abner Chou <hi@abnerchou.me> (https://abnerchou.me)"
  ],
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/chai": "^4.3.11",
    "@types/cross-spawn": "^6.0.2",
    "@types/expect": "^24.3.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.11.8",
    "@types/prismjs": "^1.26.0",
    "@types/rewire": "^2.5.30",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "c8": "^10.1.2",
    "chai": "^4.3.6",
    "domhandler": "^5.0.3",
    "eslint": "^9.32.0",
    "eslint-config-hexo": "^6.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "highlightjs-solidity": "^2.0.6",
    "html-entities": "^2.3.3",
    "html-tag-validator": "^1.6.0",
    "mocha": "^11.7.1",
    "rewire": "^9.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "camel-case": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "highlight.js": "^11.6.0",
    "htmlparser2": "^10.0.0",
    "prismjs": "^1.29.0",
    "strip-indent": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
