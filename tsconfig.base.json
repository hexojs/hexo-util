{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "ES2019"],
    "rootDir": "lib"
  },
  "include": ["lib/**.ts", "./*.json"],
  "exclude": ["node_modules"]
}
