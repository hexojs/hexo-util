{
  // TypeScript configuration for IDE and mocha support only. Not used for build.
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "outDir": "tmp/dist",
    "types": ["node", "mocha"]
  },
  "exclude": [
    "**/node_modules",
    "**/tmp",
    "**/dist",
    "**/coverage",
    "**/test",
    "**/tests",
    "**/__tests__",
    "**/__mocks__"
  ]
}
